{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Appsettings Schema",
  "description": "ActivityPaint CLI appsettings schema",
  "type": "object",
  "properties": {
    "Logging": {
      "type": "object",
      "properties": {
        "Console": {
          "type": "object",
          "description": "Console logs configuration",
          "properties": {
            "Enabled": {
              "type": "boolean"
            },
            "MinimumLogLevel": {
              "type": "string",
              "enum": [
                "Trace",
                "Debug",
                "Information",
                "Warning",
                "Error",
                "Critical"
              ]
            }
          }
        },
        "File": {
          "type": "object",
          "description": "File logs configuration",
          "properties": {
            "Enabled": {
              "type": "boolean"
            },
            "Path": {
              "type": "string",
              "description": "Path to log file with name and extension"
            },
            "MinimumLogLevel": {
              "type": "string",
              "enum": [
                "Trace",
                "Debug",
                "Information",
                "Warning",
                "Error",
                "Critical"
              ]
            }
          }
        }
      }
    }
  }
}
