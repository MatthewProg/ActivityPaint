<MudButtonGroup Color="Color.Primary" Variant="Variant.Filled">
    <MudIconButton Disabled="!SizeSelectEnabled" Icon="@Icons.Material.TwoTone.Add" OnClick="() => ++BrushSize" />
    <input class="brush-size__input" type="number" min="@MinSize" @bind-value="BrushSize" max="@MaxSize" disabled="@(!SizeSelectEnabled)" />
    <MudIconButton Disabled="!SizeSelectEnabled" Icon="@Icons.Material.TwoTone.Remove" OnClick="() => --BrushSize" />
</MudButtonGroup>

@code {
    private const int MinSize = 1;
    private const int MaxSize = 60;

    private int _brushSize = 1;

    [Parameter]
    public bool SizeSelectEnabled { get; set; } = true;

    [Parameter]
    public int BrushSize
    {
        get => _brushSize;
        set
        {
            if (value == _brushSize) return;

            _brushSize = Math.Clamp(value, MinSize, MaxSize);
            BrushSizeChanged.InvokeAsync(value);
        }
    }

    [Parameter]
    public EventCallback<int> BrushSizeChanged { get; set; }
}
