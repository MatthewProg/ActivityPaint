@using ActivityPaint.Client.Components.Enums

<MudToggleGroup T="EditorToolEnum" SelectionMode="SelectionMode.SingleSelection" @bind-Value:get="CurrentTool" @bind-Value:set="CurrentToolChanged">
    <MudToggleItem Value="EditorToolEnum.Brush">
        <MudIcon Icon="@Icons.Material.Filled.Brush" />
    </MudToggleItem>
    <MudToggleItem Value="EditorToolEnum.Eraser">
        <MudIcon Icon="@CustomIcons.Eraser" />
    </MudToggleItem>
    <MudToggleItem Value="EditorToolEnum.Fill">
        <MudIcon Icon="@Icons.Material.Filled.FormatColorFill" />
    </MudToggleItem>
</MudToggleGroup>

@code {
    [Parameter]
    public EditorToolEnum CurrentTool { get; set; } = EditorToolEnum.Brush;

    [Parameter]
    public EventCallback<EditorToolEnum> CurrentToolChanged { get; set; }
}