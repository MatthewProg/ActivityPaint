@if (CurrentStage.HasValue && CurrentStage == StageId)
{
    @ChildContent
}

@code
{
    public int? StageId { get; private set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Icon { get; set; }

    [Parameter]
    public string? Caption { get; set; }

    [CascadingParameter(Name = "RegisterStage")]
    protected Func<StageComponent, int>? RegisterStage { get; set; }

    [CascadingParameter(Name = "NotifyStageReady")]
    protected Func<StageComponent, Task>? NotifyStageReady { get; set; }

    [CascadingParameter(Name = "CurrentStage")]
    protected int? CurrentStage { get; set; }

    protected override void OnInitialized()
    {
        StageId = RegisterStage?.Invoke(this);

        base.OnInitialized();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (StageId == CurrentStage && NotifyStageReady is not null)
        {
            await NotifyStageReady.Invoke(this);
        }

        await base.OnAfterRenderAsync(firstRender);
    }
}
