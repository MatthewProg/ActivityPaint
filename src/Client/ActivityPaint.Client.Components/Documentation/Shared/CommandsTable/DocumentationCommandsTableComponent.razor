@using ActivityPaint.Client.Components.Shared.Components.Code

<MudTable Items="Commands">
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Description</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">
            <CodeComponent>
                @if (string.IsNullOrEmpty(context.DocsUrl))
                {
                    @context.Name
                }
                else
                {
                    <a href="@(context.DocsUrl)">@context.Name</a>
                }
            </CodeComponent>
        </MudTd>
        <MudTd DataLabel="Description">@context.Description</MudTd>
    </RowTemplate>
</MudTable>

@code {
    [Parameter, EditorRequired]
    public IEnumerable<DocumentationCommandsTableModel> Commands { get; set; } = [];
}
