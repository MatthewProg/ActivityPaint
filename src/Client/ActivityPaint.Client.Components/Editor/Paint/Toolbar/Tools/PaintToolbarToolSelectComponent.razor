@using ActivityPaint.Client.Components.Shared

<MudToggleGroup T="PaintToolEnum" SelectionMode="SelectionMode.SingleSelection" @bind-Value:get="CurrentTool" @bind-Value:set="CurrentToolChanged">
    <MudToggleItem Value="PaintToolEnum.Brush">
        <MudIcon Icon="@Icons.Material.Filled.Brush" />
    </MudToggleItem>
    <MudToggleItem Value="PaintToolEnum.Eraser">
        <MudIcon Icon="@CustomIcons.Eraser" />
    </MudToggleItem>
    <MudToggleItem Value="PaintToolEnum.Fill">
        <MudIcon Icon="@Icons.Material.Filled.FormatColorFill" />
    </MudToggleItem>
</MudToggleGroup>

@code {
    [Parameter]
    public PaintToolEnum CurrentTool { get; set; } = PaintToolEnum.Brush;

    [Parameter]
    public EventCallback<PaintToolEnum> CurrentToolChanged { get; set; }
}